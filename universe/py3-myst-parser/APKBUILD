pkgname=py3-myst-parser
pkgver=0.19.1
pkgrel=0
pkgdesc="Extended commonmark compliant parser"
url="https://myst-parser.readthedocs.io/"
arch="noarch"
license="MIT"
depends="
	py3-docutils
	py3-jinja2
	py3-markdown-it-py
	py3-mdit-py-plugins
	py3-sphinx
	py3-typing-extensions
	py3-yaml
	python3
	"
makedepends="py3-gpep517 py3-flit-core py3-installer"
checkdepends="py3-pytest py3-pytest-benchmark py3-beautifulsoup4"
source="https://github.com/executablebooks/MyST-Parser/archive/v$pkgver/py3-myst-parser-$pkgver.tar.gz"
builddir="$srcdir/MyST-Parser-$pkgver"
options="!check" # TODO

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
abe57048a9c19cfa08bb11c2ab988ebe462b4a104ffe3fc3b9083e2563da0bda271b5b1e278ac94e1d328bb70f5aeb20e72f81fc428fbb79dd6fb695abfd01cb  py3-myst-parser-0.19.1.tar.gz
"
