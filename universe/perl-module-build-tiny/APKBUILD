pkgname=perl-module-build-tiny
#_pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=Module-Build-Tiny
pkgver=0.045
pkgrel=0
pkgdesc="A tiny replacement for Module::Build"
url="https://metacpan.org/release/Module-Build-Tiny/"
arch="noarch"
license="GPL-1.0-or-later OR Artistic-1.0-Perl"
depends="perl perl-extutils-installpaths perl-extutils-config perl-extutils-helpers"
makedepends="perl-dev perl-extutils-helpers perl-extutils-config perl-extutils-installpaths perl-module-build"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/L/LE/LEONT/Module-Build-Tiny-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	perl Build.PL --installdirs=vendor
	./Build
}

check() {
	./Build test
}

package() {
	./Build install --destdir="$pkgdir"
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

sha512sums="
c0d121fa0601deb0fe36c94680c1cb59bc32b7fffc947caab961295e2e5e6e79ad3b28c19d95e3cc4af33b26b1e40b15f3d5d5549959ee8cd1f05b06c7656503  Module-Build-Tiny-0.045.tar.gz
"
