pkgname=ruby-mini_portile2
_gemname=${pkgname#ruby-}
pkgver=2.8.2
pkgrel=0
pkgdesc="Simplistic port-like solution for developers"
url="https://github.com/flavorjones/mini_portile"
arch="noarch"
license="MIT"
depends="ruby"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
options="!check"  # FIXME

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$geminstdir"/.github \
		"$geminstdir"/test \
		"$geminstdir"/*.md \
		"$geminstdir"/*.txt \
		"$geminstdir"/*.yml \
		"$geminstdir"/Rakefile
}

sha512sums="
a24131400bda6460dcd21cc9e6700eb9d79c6174ac2074b4b7c253ea7180d9f1c636342e1b9390c2ff4e35625079c988aed081ddf78ddd54a429eab4a892b1d7  mini_portile2-2.8.2.gem
"
