pkgname=z3
pkgver=4.12.6
pkgrel=0
pkgdesc="Theorem prover from Microsoft Research"
url="https://github.com/Z3Prover/z3"
arch="all"
license="MIT"
makedepends="cmake python3 samurai"
subpackages="$pkgname-dev py3-$pkgname:py3:noarch"
source="https://github.com/Z3Prover/z3/archive/z3-$pkgver.tar.gz
	"
builddir="$srcdir/z3-z3-$pkgver"

build() {
	cmake -B build -G Ninja \
		-DZ3_BUILD_PYTHON_BINDINGS=True \
		-DZ3_INSTALL_PYTHON_BINDINGS=True \
		-DPYTHON_EXECUTABLE=/usr/bin/python3 \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel
	cmake --build build

	# Binary for running the unit tests
	cmake --build build --target test-z3
}

check() {
	./build/test-z3 -a
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

py3() {
	pkgdesc="Python bindings for $pkgname"
	depends="python3"

	amove usr/lib/python3*
}

sha512sums="
10883877d20adbd229ad4bf65a9b50660d93d85514f933865f06920efd697f51ce34e502fbe451d4c1b2251f13d597050b8277036d4011d9c0f196111d681f8f  z3-4.12.6.tar.gz
"
