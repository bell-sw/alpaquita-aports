pkgname=py3-sphinx_rtd_theme
pkgver=1.2.0
pkgrel=0
pkgdesc="Sphinx theme for readthedocs.org"
url="https://github.com/readthedocs/sphinx_rtd_theme"
arch="noarch"
license="MIT"
depends="
	py3-docutils
	py3-sphinx
	python3
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
options="!check" # readthedocs_ext is missing
source="$pkgname-$pkgver.tar.gz::https://github.com/readthedocs/sphinx_rtd_theme/archive/$pkgver.tar.gz"
builddir="$srcdir/sphinx_rtd_theme-$pkgver"

replaces="py-sphinx_rtd_theme" # Backwards compatibility
provides="py-sphinx_rtd_theme=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
35ade4340c6b10da0a4187d95eeefd09a511eec78620722fa3cb198c8af78d608cd9815d9199acabe6f77f2f871e323f8ed23ad469d1f832a4f27fafe7b15a44  py3-sphinx_rtd_theme-1.2.0.tar.gz
"
