pkgname=spirv-headers
_pkgname=SPIRV-Headers
pkgver=1.3.250.0
pkgrel=0
pkgdesc="Machine-readable files for the SPIR-V Registry"
options="!check" # No testsuite
url="https://github.com/KhronosGroup/SPIRV-Headers"
arch="noarch"
license="GPL-3.0-or-later"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/SPIRV-Headers/archive/refs/tags/sdk-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-sdk-$pkgver"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7d5310c5a9ee849659bef24c7d62e7320d8f214e8701f7382d911ee694b024d5a7c89c2b44b9a682163032c947e59c1ca1eb6c918c90141ea135bb863db4839b  spirv-headers-1.3.250.0.tar.gz
"
