pkgname=spirv-headers
_pkgname=SPIRV-Headers
pkgver=1.3.246.1
pkgrel=0
pkgdesc="Machine-readable files for the SPIR-V Registry"
options="!check" # No testsuite
url="https://github.com/KhronosGroup/SPIRV-Headers"
arch="noarch"
license="GPL-3.0-or-later"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/SPIRV-Headers/archive/refs/tags/sdk-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-sdk-$pkgver"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
436c6ce11d918091ce4a5ef2821f51af811c9a289e220b4a2b0bb4417b1f9f3b1f56a6366cfdf56848a9b1fb612ee3ba31d35c3d73d3d24de964ee05f96a7bbc  spirv-headers-1.3.246.1.tar.gz
"
