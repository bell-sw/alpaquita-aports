pkgname=spirv-headers
_pkgname=SPIRV-Headers
pkgver=1.3.261.0
pkgrel=0
pkgdesc="Machine-readable files for the SPIR-V Registry"
options="!check" # No testsuite
url="https://github.com/KhronosGroup/SPIRV-Headers"
arch="noarch"
license="GPL-3.0-or-later"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/SPIRV-Headers/archive/refs/tags/sdk-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-sdk-$pkgver"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1309f1365d5df3a564175186b495798985dc68a16b77ad7b61109ee4c5b89b29683f861416773c5537a1a6b5597c04d2d1f34574377f3512348c06813d42fed4  spirv-headers-1.3.261.0.tar.gz
"
