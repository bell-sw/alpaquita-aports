#   78.12.0-r0:
#     - CVE-2021-29976
#     - CVE-2021-29967
#   78.10.0-r0:
#     - CVE-2021-29945
#   78.9.0-r0:
#     - CVE-2021-23987
#   78.8.0-r0:
#     - CVE-2021-23978
#   78.7.0-r0:
#     - CVE-2021-23954
#     - CVE-2021-23960
#     - CVE-2021-23964
#   78.6.0-r0:
#     - CVE-2020-16042
