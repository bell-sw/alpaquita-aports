pkgname=enchant2
pkgver=2.3.4
pkgrel=0
pkgdesc="wrapper library for generic spell checking (v2)"
url="https://abiword.github.io/enchant/"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	aspell-dev
	dbus-glib-dev
	file
	gettext-dev
	glib-dev
	groff
	nuspell-dev
	"
subpackages="$pkgname-libs $pkgname-dev $pkgname-doc"
options="!check" # needs unpackaged unittest-cpp
source="https://github.com/AbiWord/enchant/releases/download/v$pkgver/enchant-$pkgver.tar.gz"
builddir="$srcdir/enchant-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		--with-nuspell
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" pkgdatadir=/usr/share/enchant-2 install
}

sha512sums="
d109ab320ed84d6c9eec6c558c72a54d71ad30237c2bf11650b0e4030fbd9990a5ccf06a20851e46b6530279e1a9916b891cd394eefabc8812f7f92da62cbe1a  enchant-2.3.4.tar.gz
"
