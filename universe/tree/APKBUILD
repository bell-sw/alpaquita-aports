# Description:

pkgname=tree
pkgver=2.0.2
pkgrel=0
pkgdesc="A recursive directory indented listing of files"
url="http://mama.indstate.edu/users/ice/tree/"
arch="all"
license="GPL-2.0-or-later"
makedepends="$depends_dev"
options="!check"
subpackages="$pkgname-doc"
source="https://gitlab.com/OldManProgrammer/unix-tree/-/archive/2.0.2/unix-tree-2.0.2.tar.gz
	0001-remove-03-cflag.patch
	"
builddir="$srcdir/unix-$pkgname-$pkgver"

build() {
	make
}

package() {
	make PREFIX="$pkgdir/usr" MANDIR="$pkgdir/usr/share/man" install
}

