# Description:

pkgname=util-macros
pkgver=1.20.1
pkgrel=0
pkgdesc="X.Org Autotools macros"
url="https://xorg.freedesktop.org"
arch="noarch"
license="MIT"
source="https://www.x.org/releases/individual/util/util-macros-$pkgver.tar.xz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make pkgconfigdir=/usr/lib/pkgconfig DESTDIR="$pkgdir" install
}

