pkgname=zeromq
pkgver=4.3.4
pkgrel=6
pkgdesc="The ZeroMQ messaging library and tools"
url="https://zeromq.org/"
arch="all"
license="LGPL-3.0-or-later with exceptions"
makedepends="
	asciidoc
	cmake
	libsodium-dev
	perl
	samurai
	util-linux-dev
	xmlto
	"
subpackages="libzmq-static $pkgname-dev libzmq:libs"
source="https://github.com/zeromq/libzmq/releases/download/v$pkgver/zeromq-$pkgver.tar.gz
	gcc13.patch

	0100-Problem-test_inproc_connect-occasionally-fails-on-sl.patch
	"

# secfixes:
#   4.3.3-r0:
#     - CVE-2020-15166
#   4.3.2-r0:
#     - CVE-2019-13132
#   4.3.1-r0:
#     - CVE-2019-6250

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTS="$(want_check && echo ON || echo OFF)" \
		-DBUILD_STATIC=OFF \
		-DWITH_DOC=OFF
	cmake --build build

	cmake -B build-static -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_TESTS=OFF \
		-DBUILD_STATIC=ON \
		-DBUILD_SHARED=OFF \
		-DWITH_DOC=OFF
	cmake --build build-static
}

check() {
	ctest --test-dir build --output-on-failure -E test_security_curve --timeout 300 -j1
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	install -Dm644 build-static/lib/*.a -t "$pkgdir"/usr/lib
	# just the readme
	rm -r "$pkgdir"/usr/share/zmq
}

