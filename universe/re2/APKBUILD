pkgname=re2
pkgver=2023.03.01
_pkgver=${pkgver//./-}
pkgrel=1
pkgdesc="Efficient, principled regular expression library"
url="https://github.com/google/re2"
arch="all"
license="BSD-3-Clause"
makedepends="
	cmake
	icu-dev
	samurai
	"
subpackages="$pkgname-dev"
provides="libre2=$pkgver-r$pkgrel"
source="$pkgname-$pkgver.tar.gz::https://github.com/google/re2/archive/$_pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$_pkgver

build() {
	export CXXFLAGS="$CXXFLAGS -O2 -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DRE2_USE_ICU=ON \
		-DRE2_BUILD_TESTING="$(want_check && echo ON || echo OFF)"
	cmake --build build
}

check() {
	ctest -j${JOBS:-1} --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
aa0eead33429570614e5d2ebb248300237858e9d4c4a8c70aacd6dd4684e0dc80d6268692a38551a0fd23e6900770b57d5b73e354657afbb29794077d806c04c  re2-2023.03.01.tar.gz
"
