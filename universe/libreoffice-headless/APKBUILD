libreofficekit() {
	pkgdesc="Access LibreOffice functionality through C/C++ without UNO"
	depends=
	mkdir -p "$subpkgdir"/usr/include
	cp -a "$builddir"/include/LibreOfficeKit "$subpkgdir"/usr/include
}

