# Maintainer: BellSoft <info@bell-sw.com>
pkgname=ttf-tlwg
pkgver=0.7.3
pkgrel=0
pkgdesc="The Thai TrueType fonts included here are Norasi and Garuda from the National Font project"
url="https://linux.thai.net/projects/fonts-tlwg"
arch="noarch"
license="LPPL-1.3c AND GPL-2.0-only WITH Font-exception-2.0"
options="!check" # No test suite
source="https://linux.thai.net/pub/thailinux/software/fonts-tlwg/fonts/ttf-tlwg-$pkgver.tar.xz
	COPYING" # Copyright taken from https://github.com/tlwg/fonts-tlwg/blob/master/COPYING

package() {
	cd "$srcdir"/"$pkgname"-"$pkgver"
	mkdir -p "$pkgdir"/usr/share/fonts/ "$pkgdir"/etc/fonts/conf.d
        for i in *.ttf; do
                install -m644 "$i" \
                        "$pkgdir"/usr/share/fonts/
	done
        for j in fontconfig/conf.avail/*.conf; do
                install -m644 "$j" \
                        "$pkgdir"/etc/fonts/conf.d/
	done

	mkdir -p "$pkgdir"/usr/share/licenses/"$pkgname"
	install -m644 "$srcdir"/COPYING "$pkgdir"/usr/share/licenses/"$pkgname"/copyright
}

sha512sums="
38fa68858c29353840a5f6fd1dc68a35bff91b92fddaf1ce8fff004933bac076967721b01bfa03063e6ca8bb1baccd136520212326785bbfaab88dc110c13ce3  ttf-tlwg-0.7.3.tar.xz
48cc8899bb2a0d82e3c5f5590de0b4ac15908999d7ce7bc35ff049015cd1f5a332fc1e805938771a0861883ff7a78d97c00d5f8c8171e0f45d7fff8f3fbb464b  COPYING
"
