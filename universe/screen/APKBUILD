pkgname=screen
pkgver=4.9.1
pkgrel=2
pkgdesc="Window manager that multiplexes a physical terminal"
url="https://www.gnu.org/software/screen/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	autoconf
	automake
	libutempter-dev
	ncurses
	ncurses-dev
	utmps-dev
	"
subpackages="$pkgname-doc"
source="https://ftp.gnu.org/gnu/screen/screen-$pkgver.tar.gz
	utmpx.patch
	"
options="!check"  # No test suite.

# secfixes:
#   4.9.0-r3:
#     - CVE-2023-24626
#   4.8.0-r4:
#     - CVE-2021-26937
#   4.8.0-r0:
#     - CVE-2020-9366

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	CFLAGS="$CFLAGS -DNONETHACK -DGETUTENT -I/usr/include/utmps -flto=auto" \
	LIBS="-lutmps -lskarnet" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-sys-screenrc=/etc/screenrc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-colors256 \
		--enable-telnet \
		--enable-rxvt_osc
	make
}

package() {
	make -j1 DESTDIR="$pkgdir" install

	# remove suid root
	find "$pkgdir" -type f -perm -u+s -print0 \
		| xargs -0 chmod -c -s

	install -Dm644 etc/etcscreenrc "$pkgdir"/etc/screenrc
	install -Dm644 etc/screenrc "$pkgdir"/etc/skel/.screenrc
}

sha512sums="
