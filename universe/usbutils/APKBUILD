pkgname=usbutils
pkgver=015
pkgrel=1
pkgdesc="USB Device Utilities"
url="https://linux-usb.sourceforge.net/"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc"
depends="hwdata-usb"
makedepends="libusb-dev eudev-dev autoconf automake bash libtool linux-headers"
source="$pkgname-$pkgver.tar.gz::https://github.com/gregkh/usbutils/archive/refs/tags/v$pkgver.tar.gz
	hwdata.patch
	"
prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--datadir=/usr/share/hwdata \
		--disable-usbids \
		--disable-zlib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
