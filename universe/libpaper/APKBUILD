pkgname=libpaper
pkgver=2.0.7
pkgrel=0
pkgdesc="Library for handling paper characteristics"
url="https://github.com/rrthomas/libpaper/"
arch="all"
license="GPL-2.0-only"
makedepends="help2man"
checkdepends="bash"
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/rrthomas/libpaper/releases/download/v$pkgver/libpaper-$pkgver.tar.gz"
options="!check" # really broken

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-static
	make
}

check() {
	cd tests
	./run-test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
5c552266adc4a887c4fde0e1a29f9d79ba8b959bd842399a04939b20c75d86f48424c06d37087a21dcd3e2e65d42d95b170eac8d825ebdae3f15534c14d5a6c7  libpaper-2.0.7.tar.gz
"
