pkgname=libnvme
pkgver=1.3
pkgrel=0
pkgdesc="C Library for NVM Express on Linux"
url="https://github.com/linux-nvme/libnvme/"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="
	json-c-dev
	linux-headers
	openssl-dev
	"
makedepends="
	$depends_dev
	bash
	dbus-dev
	meson
	python3-dev
	swig
	util-linux-dev
	"
subpackages="${pkgname}mi:mi $pkgname-dev py3-nvme:_py3"
source="https://github.com/linux-nvme/libnvme/archive/v$pkgver/libnvme-v$pkgver.tar.gz
	doc-test.patch
	"

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddocs=false \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

_py3() {
	pkgdesc="$pkgdesc (python bindings)"
	amove usr/lib/python3*
}

mi() {
	amove usr/lib/libnvme-mi.so.*
}

sha512sums="
c874b29b73e55be842f71e74a226a76fcd50dfa72e2be100f0437bc83e740cd146b6d2f2cdaa940c11c3d8c48ff2c065ac0e8a83d4d0dde743edf4179f328670  libnvme-v1.3.tar.gz
6ca036287d964db018a2ddfb5480b0b46e6f2edd9f0a7c39dbf5977ce58d8da4d619705e16a3f269bfa7c619d6da5aeff20d9b558c697f6d68e5d89a73ef586e  doc-test.patch
"
