pkgname=netavark
pkgver=1.7.0
pkgrel=1
pkgdesc="Container network stack"
url="https://github.com/containers/netavark"
license="Apache-2.0"
# riscv64, s390x: fails to build due to nix crate
arch="all !s390x !riscv64"
makedepends="cargo mandown protoc"
subpackages="$pkgname-doc"
source="netavark-$pkgver.tar.gz::https://github.com/containers/netavark/archive/refs/tags/v$pkgver.tar.gz"
options="net"


build() {
	make

	mandown docs/$pkgname.1.md > docs/$pkgname.1
}

check() {
	make unit
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

sha512sums="
52658b32cc03f157b4292e40918559700fcdd1cba633e34b396aeb0ed701ed308d1de45eba7f04865e89145367df772fdde91208f2475553e8db209426291844  netavark-1.7.0.tar.gz
"
