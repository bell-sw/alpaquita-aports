# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=py3-referencing
pkgver=0.31.0
pkgrel=0
pkgdesc="Cross-specification JSON referencing"
url="https://github.com/python-jsonschema/referencing"
arch="noarch"
license="MIT"
depends="
	py3-attrs
	py3-rpds-py
	"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/python-jsonschema/referencing/releases/download/v$pkgver/referencing-$pkgver.tar.gz"
builddir="$srcdir/referencing-$pkgver"
options="!check" # circular with jsonschema

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
1d32abf9f7e88e3cee484dcf51804151a9a4de0743dded30dc71184f542147d274987b4c0948423aaf34a981133c2a9607c8b805e5a721282a6472c95a109aee  referencing-0.31.0.tar.gz
"
