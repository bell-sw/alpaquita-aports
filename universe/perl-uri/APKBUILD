pkgname=perl-uri
#_pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=URI
pkgver=5.19
pkgrel=1
pkgdesc="Uniform Resource Identifiers (absolute and relative)"
replaces="perl-uri-escape"
url="https://metacpan.org/release/URI/"
arch="noarch"
license="GPL-1.0-or-later OR Artistic-1.0-Perl"
depends="perl"
makedepends="perl-dev"
checkdepends="perl-test-warnings perl-test-needs perl-test-fatal"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/S/SI/SIMBABQUE/URI-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

sha512sums="
db22a65999ab2b7735015cfabb0e2e9f8ee7d6f4b353572269cba7b2c1c83840f2ab0c71a7d272a5ae8743b7e77c60bffd0948ca3d04d4abfa8dcd6188481103  URI-5.19.tar.gz
"
