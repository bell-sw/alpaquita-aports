pkgname=libxaw
pkgver=1.0.15
pkgrel=1
pkgdesc="X Athena Widget Set"
url="https://www.x.org"
arch="all"
license="MIT"
makedepends="
	libx11-dev
	libxext-dev
	libxmu-dev
	libxpm-dev
	util-macros
	xorgproto
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://www.x.org/releases/individual/lib/libXaw-$pkgver.tar.xz"
builddir="$srcdir"/libXaw-$pkgver

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-static \
		--disable-xaw6
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
8edbf280b7b24b9040c291545053c1251d6af7e7f56da43a6065a1848245863eb52bdfc28c2f18dbb6597a4064394a44f4df5d8596a1a467549ccc9ce50a7821  libXaw-1.0.15.tar.xz
"
