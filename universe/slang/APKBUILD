pkgname=slang
pkgver=2.3.3
pkgrel=0
pkgdesc="Powerful interpreted language"
url="https://www.jedsoft.org/slang"
arch="all"
license="GPL-2.0-or-later"
makedepends="ncurses-dev pcre-dev"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc"
source="https://www.jedsoft.org/releases/slang/slang-$pkgver.tar.bz2
	disable-rpath.patch
	terminfo-in-etc.patch
	skip-slsh-process-test.patch
	0100-test-setup-sighup-dfl.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make -j1
}

check() {
	make check
}

package() {
	make -j1 DESTDIR="$pkgdir" install-all
}

