pkgname=ell
pkgver=0.56
pkgrel=3
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="LGPL-2.1-or-later"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dbg $pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make -j1 check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
78ec7264429309f5a285bb8cc00c0cb862f67fa790331034a9b99e05bfac892ed0282bc9379b8fa315b19dd23e20dcba801d0cf12e112a4e8f8e0b9460edb7b2  ell-0.56.tar.gz
"
