pkgname=ell
pkgver=0.53
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
12e31c985a1aab68fe5bf22048e61cf155d0ebfb69cc86734e1f440b763abdb05c9e40ca6f15a1378b608d803872fe56279b77e328225461cf751e66b308b41b  ell-0.53.tar.gz
"
