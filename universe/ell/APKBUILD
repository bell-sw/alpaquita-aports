pkgname=ell
pkgver=0.60
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="LGPL-2.1-or-later"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dbg $pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make -j1 check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
5ecf71d2e9d00e4c0952eb93238cf21b24fc7a05ca79af33f7f364c084e25c85d95d4c23a90daf4f156635ebde6ad9306aa55a9474fe2754a12cc369bb3c8cf4  ell-0.60.tar.gz
"
