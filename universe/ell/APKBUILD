pkgname=ell
pkgver=0.58
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="LGPL-2.1-or-later"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dbg $pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make -j1 check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
5be1988a5c79ab5e740d4b1fae15c3da1e367d13cd6cacfb7df2ff4d8549c3eb01e123e17de7b162d0710f82718569601a92012e85bc069bbaec8b913bcba0d2  ell-0.58.tar.gz
"
