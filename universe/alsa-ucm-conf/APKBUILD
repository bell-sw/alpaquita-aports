pkgname=alsa-ucm-conf
pkgver=1.2.8
pkgrel=1
pkgdesc="ALSA Use Case Manager configuration"
url="https://alsa-project.org"
arch="noarch"
license="BSD-3-Clause"
source="https://alsa-project.org/files/pub/lib/alsa-ucm-conf-$pkgver.tar.bz2"
