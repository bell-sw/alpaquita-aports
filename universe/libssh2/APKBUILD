# Description:

pkgname=libssh2
pkgver=1.11.1
pkgrel=0
pkgdesc="library for accessing ssh1/ssh2 protocol servers"
url="https://libssh2.org/"
arch="all"
license="BSD-3-Clause"
makedepends_host="openssl-dev>3 zlib-dev"
checkdepends="bash"
subpackages="$pkgname-dbg $pkgname-static $pkgname-dev $pkgname-doc"
source="https://www.libssh2.org/download/libssh2-$pkgver.tar.gz
	"

# secfixes:
#   1.11.0-r1:
#     - CVE-2023-48795
#   1.9.0-r1:
#     - CVE-2019-17498
#   1.9.0-r0:
#     - CVE-2019-13115
#   1.8.1-r0:
#     - CVE-2019-3855
#     - CVE-2019-3856
#     - CVE-2019-3857
#     - CVE-2019-3858
#     - CVE-2019-3859
#     - CVE-2019-3860
#     - CVE-2019-3861
#     - CVE-2019-3862
#     - CVE-2019-3863

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-rpath \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-crypto=openssl \
		--with-libssl-prefix=$CBUILDROOT/ \
		--disable-docker-tests
	make
}

check() {
	# with --disable-docker-tests above only mansyntax.sh and test_simple are
	# run, other tests require docker and a running sshd
	make check VERBOSE=1
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
