pkgname=alsa-lib
pkgver=1.2.9
pkgrel=4
pkgdesc="Advanced Linux Sound Architecture (ALSA) library"
url="https://alsa-project.org/"
arch="all"
license="LGPL-2.1-or-later"
subpackages="$pkgname-dbg $pkgname-dev"
makedepends="linux-headers"
source="https://alsa-project.org/files/pub/lib/alsa-lib-$pkgver.tar.bz2
	$pkgname-divzero-fix.patch::https://github.com/alsa-project/alsa-lib/commit/3661bdae35961e4a4dd67a60682550e30b878207.diff
	remove-test.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-python \
		--disable-static \
		--disable-resmgr \
		--enable-rawmidi \
		--enable-seq \
		--enable-aload \
		--disable-dependency-tracking \
		--without-versioned
	make
}

check() {
	make check
}

package() {
	make -j1 DESTDIR="$pkgdir" install
	install -d -m755 "$pkgdir"/etc/alsa/conf.d
}

