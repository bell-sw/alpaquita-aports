build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-cxx
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

libtiffxx() {
	pkgdesc="C++ binding to libtiff"

	amove usr/lib/libtiffxx.so.*
}

tools() {
	pkgdesc="Command-line utility programs for manipulating TIFF files"

	amove usr/bin
}

sha512sums="
