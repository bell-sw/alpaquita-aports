pkgname=rpm
pkgver=4.18.1
pkgrel=0
pkgdesc="Redhat Package Management utilities (RPM)"
url="https://rpm.org/"
arch="all"
license="GPL-2.0-or-later LGPL-2.0-or-later"
depends_dev="
	acl-dev
	binutils-dev
	bzip2-dev
	file-dev
	libarchive-dev
	libcap-dev
	libgcrypt-dev
	lua5.4-dev
	popt-dev
	sqlite-dev
	xz-dev
	zlib-dev
	"
makedepends="
	$depends_dev
	autoconf
	automake
	elfutils-dev
	gettext-dev
	graphviz
	libtool
	py3-setuptools
	python3-dev
	zstd-dev
	"
subpackages="$pkgname-dev $pkgname-lang py3-rpm:py_rpm $pkgname-libs"
source="http://ftp.rpm.org/releases/rpm-${pkgver%*.*}.x/rpm-$pkgver.tar.bz2
	autoconf-lua5.4.patch
	"

# secfixes:
#   4.18.0-r0:
#     - CVE-2021-35937
#     - CVE-2021-35938
#     - CVE-2021-35939
#   4.17.1-r0:
#     - CVE-2021-3521
#   4.16.1.3-r0:
#     - CVE-2021-3421
#     - CVE-2021-20271
#     - CVE-2021-20266

prepare() {
	# Switch to sqlite db by default, including during build-time tests
	sed -i -e "/_db_backend/ s/ bdb/ sqlite/g" macros.in

	default_prepare
	autoreconf -fi
}

build() {
	LIBS="$LIBS -lintl" \
	CFLAGS="$CFLAGS -flto=auto" \
	PYTHON=python3 \
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-cap \
		--with-acl \
		--enable-python \
		--enable-zstd=yes \
		--enable-sqlite=yes \
		--enable-bdb_ro=yes \
		--with-crypto=libgcrypt \
		--disable-plugins
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

py_rpm() {
	pkgdesc="Python3 bindings for RPM"

	replaces="py-rpm" # Backwards compatibility
	provides="py-rpm=$pkgver-r$pkgrel" # Backwards compatibility

	amove usr/lib/python3*
}

libs() {
	default_libs
	amove usr/lib/*
}

sha512sums="
0ede2138b9b4c3b50d7e914cf82655507fcc207ba67804c749ea17560002976cb26b95801e9138a51589b60459494a991213a1131dbef5af2eca9b5050a4f29c  rpm-4.18.1.tar.bz2
8aa1fc93d2b8d8f64cbe38c136383cfaeb52e11804de44c87f5f929ef0c43273da81d168748a6d96dc5b22ffd46bccf342563e36a75dc9a7d818f72efe4d5ddf  autoconf-lua5.4.patch
"
