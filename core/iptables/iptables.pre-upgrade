#!/bin/sh

ver_old=$2

# this should be iptables-openrc.pre-upgrade theoretically, but then it would upgrade before this
if [ "$(apk version -t "$ver_old" '1.8.9-r4')" = '<' ]; then
	# rc-service might just not exist at all, but then this does nothing and
	# silently fails, which is fine
	rc-service --ifstarted iptables save 2>/dev/null
	rc-service --ifstarted ip6tables save 2>/dev/null
fi

exit 0
