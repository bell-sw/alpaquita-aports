# Description: contains DejaVu fonts based on Vera fonts but provides much
# more characters.

pkgname=font-dejavu
pkgver=2.37
pkgrel=4
pkgdesc="Font family based on the Bitstream Vera Fonts with a wider range of characters"
url="https://dejavu-fonts.github.io/"
arch="noarch"
license="Bitstream-Vera"
options="!check"
depends="$pkgname-core $pkgname-extra"
makedepends="font-util-dev"
subpackages="
	$pkgname-core:_core
	$pkgname-extra:_extra
	"
# added fontconfig configuration from:
# https://github.com/bohoomil/fontconfig-ultimate/tree/master/fontconfig_patches/fonts-settings
source="https://downloads.sourceforge.net/project/dejavu/dejavu/$pkgver/dejavu-fonts-ttf-$pkgver.tar.bz2
	https://downloads.sourceforge.net/project/dejavu/dejavu/$pkgver/dejavu-lgc-fonts-ttf-$pkgver.tar.bz2
	45-dejavu.conf
	90-tt-dejavu.conf
	"
builddir="$srcdir"

# backwards compat (<3.17)
provides="ttf-dejavu=$pkgver-r$pkgrel"
replaces="ttf-dejavu"

package() {
	mkdir -p "$pkgdir"/usr/share/fonts
}

_core() {
	depends="fontconfig encodings mkfontscale"
	# backwards compat (<3.17)
	provides="ttf-dejavu-core=$pkgver-r$pkgrel"
	replaces="ttf-dejavu-core"

	mkdir -p "$subpkgdir"/usr/share/fonts/dejavu-core \
		"$subpkgdir"/etc/fonts/conf.d

	for f in DejaVuSans DejaVuSansMono DejaVuSerif ; do
		mv "$srcdir"/dejavu-fonts-ttf-$pkgver/ttf/$f.ttf \
			"$srcdir"/dejavu-fonts-ttf-$pkgver/ttf/$f-Bold.ttf \
			"$subpkgdir"/usr/share/fonts/dejavu-core
	done

	install -Dm644 \
		"$srcdir"/dejavu-fonts-ttf-$pkgver/fontconfig/*.conf \
		"$srcdir"/dejavu-lgc-fonts-ttf-$pkgver/fontconfig/*.conf \
		-t "$subpkgdir"/etc/fonts/conf.avail

	cd "$subpkgdir"/etc/fonts/conf.d
	local j
	for j in "$srcdir"/*.conf; do
		install -Dm644 "$j" -t "$subpkgdir"/etc/fonts/conf.avail/
		ln -sf /etc/fonts/conf.avail/${j##*/}
	done

	install -D -m644 "$srcdir"/dejavu-fonts-ttf-$pkgver/LICENSE \
		"$subpkgdir"/usr/share/licenses/dejavu-core/copyright
}

_extra() {
	depends="$pkgname-core"
	pkgdesc="$pkgdesc (extra variants)"
	# backwards compat (<3.17)
	provides="ttf-dejavu-extra=$pkgver-r$pkgrel"
	replaces="ttf-dejavu-extra"
	
	mkdir -p "$subpkgdir"/usr/share/fonts/dejavu-extra

	install -Dm644 \
		"$srcdir"/dejavu-fonts-ttf-$pkgver/ttf/*.ttf \
		"$srcdir"/dejavu-lgc-fonts-ttf-$pkgver/ttf/*.ttf \
		-t "$subpkgdir"/usr/share/fonts/dejavu-extra

	install -D -m644 "$srcdir"/dejavu-lgc-fonts-ttf-$pkgver/LICENSE \
		"$subpkgdir"/usr/share/licenses/dejavu-extra/copyright
}


