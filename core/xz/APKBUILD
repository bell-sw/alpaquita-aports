# Description: provides CLI tools and a library for data compression and
# decompression.

pkgname=xz
pkgver=5.2.9
pkgrel=0
pkgdesc="Data compression utilities for XZ and LZMA"
url="https://tukaani.org/xz"
arch="all"
license="GPL-2.0-or-later AND Public-Domain AND LGPL-2.1-or-later"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc $pkgname-libs"
source="https://tukaani.org/xz/xz-$pkgver.tar.xz"

# secfixes:
#   5.2.5-r1:
#     - CVE-2022-1271

build() {
	# compression utility
	CFLAGS="$CFLAGS -O2" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-rpath \
		--disable-werror \
		--disable-doc

	sed -i \
		-e 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' \
		-e 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' \
		libtool
	make
}

check() {
	LD_LIBRARY_PATH="$(pwd)/src/liblzma/.libs" make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
fa844d63ceedf3b35c38f82532dc3b847543ac37b9e56db774c234af73d1385a300ba1033154689059031f18793d791c8cdb65bbeb031691d837f76e673372a7  xz-5.2.9.tar.xz
"
