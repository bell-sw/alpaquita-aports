# Maintainer: BellSoft <info@bell-sw.com>

# Description: is a program which helps to configure compiler and linker flags
# for development libraries. 

pkgname=pkgconf
pkgver=1.9.0
pkgrel=0
pkgdesc="Compiler and linker flag configuration utilities"
url="https://git.sr.ht/~kaniini/pkgconf"
arch="all"
license="ISC"
replaces="pkgconfig"
provides="pkgconfig=1"
subpackages="$pkgname-doc $pkgname-dev"
source="https://distfiles.dereferenced.org/pkgconf/pkgconf-$pkgver.tar.xz"
checkdepends="kyua atf"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-pkg-config-dir=/usr/local/lib/pkgconfig:/usr/local/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	ln -s pkgconf "$pkgdir"/usr/bin/pkg-config
}

dev() {
	default_dev

	# Move pkg-config back to main package (default_dev implicitly moves
	# files /usr/bin/*-config to -dev).
	mv "$subpkgdir"/usr/bin/pkg-config "$pkgdir"/usr/bin/

	mkdir -p "$pkgdir"/usr/share/aclocal/
	mv "$subpkgdir"/usr/share/aclocal/pkg.m4 "$pkgdir"/usr/share/aclocal/
}

sha512sums="
14b53b8a5a2e90b62d23c4ca3ea8e6f3113aac1ab4bc63bb59fef27d61d2f13953d02ea022c38ed9aa039b075a9ff93cf9fd58f93013cd1ea78bef411937055a  pkgconf-1.9.0.tar.xz
"
