# Maintainer: BellSoft <info@bell-sw.com>

# Description: libusb is a portable library that allows communicating with USB
# devices.

pkgname=libusb
pkgver=1.0.26
pkgrel=0
pkgdesc="Userspace library to access to USB devices"
url="https://libusb.info/"
arch="all"
license="LGPL-2.0-or-later"
subpackages="$pkgname-dev"
replaces="libusbx"
makedepends="linux-headers"
source="https://github.com/libusb/libusb/releases/download/v$pkgver/libusb-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-udev \
		--enable-static
	make -j1
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
fcdb85c98f21639668693c2fd522814d440972d65883984c4ae53d0555bdbdb7e8c7a32199cd4b01113556a1eb5be7841b750cc73c9f6bda79bfe1af80914e71  libusb-1.0.26.tar.bz2
"
