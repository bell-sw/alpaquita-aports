# Maintainer: BellSoft <info@bell-sw.com>

# Description: freetype is a small and performant library that produces glyph
# images of various font formants.

pkgname=freetype
pkgver=2.12.1
pkgrel=0
pkgdesc="FreeType 2 font rendering engine"
url="https://www.freetype.org/"
arch="all"
license="FTL GPL-2.0-or-later"
options="!check"
makedepends="
	brotli-dev
	bzip2-dev
	libpng-dev
	libx11-dev
	zlib-dev
	"
subpackages="
	$pkgname-static
	$pkgname-dev
	$pkgname-demos
	$pkgname-doc
	"
source="https://download.savannah.gnu.org/releases/freetype/freetype-$pkgver.tar.xz
	https://download.savannah.gnu.org/releases/freetype/ft2demos-$pkgver.tar.xz
	0001-Enable-table-validation-modules.patch
	subpixel.patch
	"

# secfixes:
#   2.12.1-r0:
#     - CVE-2022-27404
#     - CVE-2022-27405
#     - CVE-2022-27406
#   2.10.4-r0:
#     - CVE-2020-15999
#   2.9-r1:
#     - CVE-2018-6942
#   2.7.1-r1:
#     - CVE-2017-8105
#     - CVE-2017-8287

prepare() {
	default_prepare

	mv ../ft2demos-$pkgver ft2demos
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-static \
		--with-brotli \
		--with-bzip2 \
		--with-png \
		--enable-freetype-config
	make
	make -C ft2demos TOP_DIR=".."
}

package() {
	make DESTDIR="$pkgdir" install
	make -C ft2demos TOP_DIR=".." DESTDIR="$pkgdir" install
}

demos() {
	pkgdesc="A collection of FreeType demos"
	depends="$pkgname=$pkgver-r$pkgrel"

	amove usr/bin
}

