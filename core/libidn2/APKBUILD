# Description: Libidn2 implements the revised algorithm for internationalized
# domain names called IDNA2008/TR46.

pkgname=libidn2
pkgver=2.3.4
pkgrel=1
pkgdesc="Internationalized domain names (IDNA2008/TR46) library"
url="https://www.gnu.org/software/libidn#libidn2"
arch="all"
license="GPL-2.0-or-later AND LGPL-3.0-or-later"
makedepends="libunistring-dev"
checkdepends="diffutils"
subpackages="${pkgname#lib}-utils:utils $pkgname-static $pkgname-dev $pkgname-doc"
source="https://ftp.gnu.org/gnu/libidn/libidn2-$pkgver.tar.gz"

# secfixes:
#   2.2.0-r0:
#     - CVE-2019-12290
#   2.1.1-r0:
#     - CVE-2019-18224

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install

	# only keep man pages
	rm -rf "$pkgdir"/usr/share/info
}

utils() {
	license='GPL-3.0-or-later'
	pkgdesc="$pkgdesc (CLI utilities)"

	amove 'usr/bin'
}

sha512sums="
a6e90ccef56cfd0b37e3333ab3594bb3cec7ca42a138ca8c4f4ce142da208fa792f6c78ca00c01001c2bc02831abcbaf1cf9bcc346a5290fd7b30708f5a462f3  libidn2-2.3.4.tar.gz
"
