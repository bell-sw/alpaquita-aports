# Description: a small but performant library for common Netlink tasks.

pkgname=libmnl
pkgver=1.0.5
pkgrel=2
pkgdesc="Userspace netlink library"
url="https://www.netfilter.org/projects/libmnl/"
arch="all"
license="LGPL-2.1-or-later"
depends_dev="linux-headers"
makedepends="$depends_dev bsd-compat-headers"
subpackages="$pkgname-static $pkgname-dev"
source="https://www.netfilter.org/projects/libmnl/files/libmnl-$pkgver.tar.bz2
	musl:musl-fix-headers.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-static
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
