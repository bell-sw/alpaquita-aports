# Description: iproute2 is used for TCP/IP networking and traffic control in
# the Linux kernel.

pkgname=iproute2
pkgver=6.1.0
pkgrel=0
pkgdesc="IP Routing Utilities"
url="https://wiki.linuxfoundation.org/networking/iproute2"
arch="all"
license="GPL-2.0-or-later"
install="$pkgname.post-install"
depends="
	$pkgname-minimal
	$pkgname-tc
	$pkgname-ss
	"
makedepends="
	bash
	bison
	elfutils-dev
	libcap-dev
	libmnl-dev
	flex
	iptables-dev
	"
subpackages="
	$pkgname-doc
	$pkgname-dev
	$pkgname-bash-completion
	$pkgname-minimal
	$pkgname-tc
	$pkgname-ss
	$pkgname-rdma
	"
source="https://kernel.org/pub/linux/utils/net/iproute2/iproute2-v$pkgver.tar.xz"
options="!check"  # requires namespaces support and root
builddir="$srcdir/$pkgname-v$pkgver"

# secfixes:
#   5.1.0-r0:
#     - CVE-2019-20795

build() {
	make V=1
}

package() {
	make DESTDIR="$pkgdir" SBINDIR=/usr/sbin install

	install -D -m644 include/libnetlink.h "$pkgdir"/usr/include/libnetlink.h
	install -D -m644 lib/libnetlink.a "$pkgdir"/usr/lib/libnetlink.a
}

minimal() {
	pkgdesc="IP Routing Utilities (/sbin/ip only)"
	depends=""
	replaces="$pkgname"  # for backward compatibility (Alpine <3.13)

	amove usr/sbin/ip
	amove etc
}

tc() {
	pkgdesc="$pkgdesc (traffic control and XDP support)"
	depends=""
	replaces="$pkgname"  # for backward compatibility (Alpine <3.13)

	amove usr/sbin/tc
	amove usr/lib/tc
}

ss() {
	pkgdesc="$pkgdesc (socket statistics tool)"
	depends=""
	replaces="$pkgname"  # for backward compatibility (Alpine <3.13)

	amove usr/sbin/ss
}

rdma() {
	pkgdesc="$pkgdesc (rdma utilities)"
	depends=""

	amove usr/sbin/dcb
	amove usr/sbin/devlink
	amove usr/sbin/rdma
	amove usr/sbin/tipc
	amove usr/sbin/vdpa
}

sha512sums="
dfb2f99554486673e3f8966745150d652ef91de4e40bfacde2e762877d5f30a3b29e0b653785421fb838455e67eaa0d36d59cf1659882db0de5a761a10f8ee73  iproute2-v6.1.0.tar.xz
"
