pkgname=npth
pkgver=1.6
pkgrel=4
pkgdesc="The New GNU Portable Threads library"
url="https://gnupg.org/related_software/npth/"
arch="all"
license="LGPL-2.0-or-later"
subpackages="$pkgname-dev"
source="https://gnupg.org/ftp/gcrypt/npth/npth-$pkgver.tar.bz2"

prepare() {
 	default_prepare
	update_config_sub
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
2ed1012e14a9d10665420b9a23628be7e206fd9348111ec751349b93557ee69f1176bcf7e6b195b35b1c44a5e0e81ee33b713f03d79a33d1ecd9037035afeda2  npth-1.6.tar.bz2
"
