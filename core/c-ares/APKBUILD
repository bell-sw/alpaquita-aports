# Description: c-ares enables asynchronous DNS queries and name resolutions.

pkgname=c-ares
pkgver=1.21.0
pkgrel=0
pkgdesc="C library for asynchronous DNS requests"
url="https://c-ares.org/"
arch="all"
license="MIT"
subpackages="$pkgname-doc $pkgname-static $pkgname-dev $pkgname-utils::noarch"
source="https://c-ares.haxx.se/download/c-ares-$pkgver.tar.gz"

# secfixes:
#   1.17.2-r0:
#     - CVE-2021-3672

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-shared
	make
}

check() {
	test/arestest --gtest_filter=-*.Live*
}

package() {
	make DESTDIR="$pkgdir" install
	cd src/tools
	install -Dm755 -t "$pkgdir"/usr/bin \
		adig ahost
}

utils() {
	amove usr/bin
}

sha512sums="
c526b0a28d8ea1c6a53215dfd52e8250c968513a667c5414459d97d46288da7e7a2193d757fc78225e56c6684b3d30e756dd3e5a31917e996c871773a34892ea  c-ares-1.21.0.tar.gz
"
