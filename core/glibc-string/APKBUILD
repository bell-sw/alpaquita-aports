pkgname=glibc-string
pkgver=2.34.5
pkgrel=0
pkgdesc="Collection of glibc optimized asm string implementations"
url="https://github.com/bell-sw/glibc-string"
arch="x86_64"
license="LGPL-2.1-or-later"
source="https://packages.bell-sw.com/alpaquita/distfiles/$pkgname-$pkgver.tar.xz"
options="!check !libc_glibc"

build() {
	cd "$builddir"

	export CFLAGS="${CFLAGS/-Os/-O2}"
	make
}

package() {
	cd "$builddir"

	mkdir -p "$pkgdir"/usr/lib
	cp lib/libglibc-string.a "$pkgdir"/usr/lib/
}

sha512sums="
cd457530ba4f264d8a6ee22b583ff7094c220e5e40433f02cfe4d46232ae3f1b65d5f66bc8ffbb64811d7d39ff1bdfbc985c0a63fd8008962880c3572a8e0a2e  glibc-string-2.34.5.tar.xz
"
