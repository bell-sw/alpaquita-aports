pkgname=alpaquita-installer
pkgver=0.5.2
pkgrel=0
pkgdesc="Alpaquita Linux Installer"
url="https://bell-sw.com"
arch="noarch"
license="AGPL-3.0-or-later"
depends="
	bonding
	cryptsetup
	dosfstools
	e2fsprogs
	hwids-pci
	hwids-usb
	ifupdown-ng-wifi
	lsblk
	lvm2
	mdadm
	mdadm-udev
	py3-attrs
	py3-urwid
	py3-yaml
	python3
	sfdisk
	tzdata
	wipefs
	xfsprogs
"
makedepends="py3-setuptools"
subpackages="$pkgname-doc"
source="https://packages.bell-sw.com/alpaquita/distfiles/$pkgname-$pkgver.tar.xz
	https://packages.bell-sw.com/alpaquita/musl/stream/keys/$CARCH/info@bell-sw.com-60a2aed7.rsa.pub
	https://packages.bell-sw.com/alpaquita/glibc/stream/keys/$CARCH/info@bell-sw.com-61c66027.rsa.pub
	"

build() {
	install -D -m 0644 "$srcdir/info@bell-sw.com-60a2aed7.rsa.pub" -t alpaquita_installer/keys/musl/
	install -D -m 0644 "$srcdir/info@bell-sw.com-61c66027.rsa.pub" -t alpaquita_installer/keys/glibc/
	python3 setup.py build
}

check() {
	python3 setup.py check
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"

	mkdir -p "$pkgdir/usr/share/doc/$pkgname"
	for _doc in *.md; do
		install -m 0644 $_doc "$pkgdir/usr/share/doc/$pkgname"
	done
}

