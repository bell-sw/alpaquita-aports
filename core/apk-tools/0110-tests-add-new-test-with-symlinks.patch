+pkgname=test-base
+pkgver=1.1
+pkgrel=0
+pkgdesc="Package Base for apk-tools testsuite"
+url="https://bell-sw.com"
+arch="noarch"
+license="GPL"
+builddir="$srcdir/$pkgname-$pkgver"
+
+prepare() {
+	mkdir -p "$builddir"
+}
+
+build() {
