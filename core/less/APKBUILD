# Description: less allows you to display text files in a command-line
# environment.

pkgname=less
pkgver=668
pkgrel=0
pkgdesc="File pager"
url="https://www.greenwoodsoftware.com/less/"
arch="all"
license="GPL-3.0-or-later OR BSD-2-Clause"
options="!check"
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
source="https://www.greenwoodsoftware.com/less/less-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
6527741a609849ec27b6ab35de46f2c5c2b2771391e3efe263207bee28915946f44331a42f832a7cb42231a19b135cbadc15ae02cd997b83a13cdfbc7213fc27  less-668.tar.gz
"
