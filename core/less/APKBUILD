# Description: less allows you to display text files in a command-line
# environment.

pkgname=less
pkgver=608
pkgrel=0
pkgdesc="File pager"
url="https://www.greenwoodsoftware.com/less/"
arch="all"
license="GPL-3.0-or-later OR BSD-2-Clause"
options="!check"
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
source="https://www.greenwoodsoftware.com/less/less-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
7945b7f88921832ebb1b45fba8cbb449ee0133342796b654a52c146dfff3d84db18724ee84e53349eeea6017a0ebe2d8eb5366210275981dde7bb7190118fa66  less-608.tar.gz
"
