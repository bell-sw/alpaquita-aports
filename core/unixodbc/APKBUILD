# Description: implements the Open Database Connectivity standard and enables
# database access by means of a convenient API.

pkgname=unixodbc
pkgver=2.3.11
pkgrel=0
pkgdesc="ODBC API implementation for Unix"
url="http://www.unixodbc.org/"
arch="all"
license="LGPL-2.0-or-later"
options="!check"  # No test suite.
makedepends="readline-dev"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc"
source="http://www.unixodbc.org/unixODBC-$pkgver.tar.gz"

builddir="$srcdir/unixODBC-$pkgver"

prepare() {
	default_prepare
	update_config_sub
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls \
		--enable-gui=no \
		--enable-static
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
dddc32f90a7962e6988e1130a8093c6fb8b9ff532cad270d572250324aecbc739f45f9d8021d217313910bab25b08e69009b4f87456575535e93be1f46f5f13d  unixODBC-2.3.11.tar.gz
"
