pkgname=distro-base
pkgver=22
pkgrel=7
pkgdesc="Meta package for minimal BellSoft Alpaquita base"
url="https://bell-sw.com/"
arch="noarch"
license="MIT"
depends="
	distro-baselayout
	distro-release
	apk-tools
	busybox
	busybox-openrc
	busybox-suid
	dev-openrc
	libc-utils
	openrc
	"
makedepends=""
install=""
subpackages=""
subpackages="distro-release:release"
replaces="alpaquita-baselayout"
provides="alpaquita-base=$pkgver-r$pkgrel"
source=""
options="!check"

build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"
}

release() {
	depends="distro-keys"
	pkgdesc="Alpaquita release data"
	provides="alpaquita-release=$pkgver-r$pkgrel"

	mkdir -p "$subpkgdir"/etc
	# create /etc/alpaquita-release
	local _rel="LTS"
	local _ver=${pkgver%_*}
	echo $pkgver | grep -q '\.' || _rel="Stream"
	echo $_ver > "$subpkgdir"/etc/alpaquita-release

	# create /etc/issue
	cat >"$subpkgdir"/etc/issue<<EOF
Welcome to BellSoft Alpaquita Linux $_rel $pkgver
Kernel \\r on an \\m (\\l)

EOF

	# create os-release
	cat >"$subpkgdir"/etc/os-release<<EOF
NAME="BellSoft Alpaquita Linux $_rel"
ID=alpaquita
ID_LIKE=alpine
VERSION_ID=$_ver
PRETTY_NAME="BellSoft Alpaquita Linux $_rel $pkgver ($CLIBC)"
HOME_URL="https://bell-sw.com/"
BUG_REPORT_URL="https://bell-sw.com/support/"
ALPAQUITA_LIBC=$CLIBC
EOF
}
